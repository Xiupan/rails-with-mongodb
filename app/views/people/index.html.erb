<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% @people.each do |p| %>
      <p><%= p.first_name %> <%= p.last_name %></p>
      <% p.things.each do |thing| %>
        <p>Thing: <%= thing.name %></p>
      <% end %>
      <hr>
    <% end %>
  </body>
</html>
